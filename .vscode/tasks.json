{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Run Make Build",
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Make Clean",
			"command": "make clean",
			"group": {
				"kind": "none"
			}
		},
		{
			"type": "shell",
			"label": "Diagrams",
			"command": "${workspaceFolder}/diagrams/convert.sh",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}